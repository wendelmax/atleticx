rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function memberDoc(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(request.auth.uid));
    }

    function isOrgMember(orgId) {
      return signedIn() && memberDoc(orgId).exists() && memberDoc(orgId).data.status == "active";
    }

    function hasOrgRole(orgId, role) {
      return isOrgMember(orgId) && role in memberDoc(orgId).data.roles;
    }

    function isOrgManager(orgId) {
      return hasOrgRole(orgId, "super_admin")
        || hasOrgRole(orgId, "academy_admin")
        || hasOrgRole(orgId, "coach");
    }

    match /users/{uid} {
      allow read: if isSelf(uid);
      allow create: if isSelf(uid);
      allow update: if isSelf(uid);
      allow delete: if false;
    }

    match /organizations/{orgId} {
      allow read: if isOrgMember(orgId);
      allow create: if signedIn();
      allow update: if hasOrgRole(orgId, "super_admin") || hasOrgRole(orgId, "academy_admin");
      allow delete: if false;

      match /members/{uid} {
        allow read: if isOrgMember(orgId) || isSelf(uid);
        allow create: if isOrgManager(orgId);
        allow update: if isOrgManager(orgId) || isSelf(uid);
        allow delete: if hasOrgRole(orgId, "super_admin") || hasOrgRole(orgId, "academy_admin");
      }
    }

    match /classes/{classId} {
      allow read: if isOrgMember(resource.data.organizationId);
      allow create: if signedIn() && isOrgManager(request.resource.data.organizationId);
      allow update: if signedIn() && isOrgManager(resource.data.organizationId);
      allow delete: if false;
    }

    match /inviteTokens/{tokenId} {
      allow read: if signedIn();
      allow create: if signedIn() && isOrgManager(request.resource.data.organizationId);
      allow update: if signedIn() && (
        isOrgManager(resource.data.organizationId)
        || (
          request.resource.data.status == "used"
          && request.resource.data.usedByUid == request.auth.uid
        )
      );
      allow delete: if hasOrgRole(resource.data.organizationId, "super_admin")
        || hasOrgRole(resource.data.organizationId, "academy_admin");
    }

    match /auditLogs/{logId} {
      allow create: if signedIn();
      allow read: if isOrgManager(resource.data.organizationId);
      allow update, delete: if false;
    }
  }
}
